<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Orders Dashboard</title>
<style>
   
</style>
</head>
<body>

<%- include("./partials/header.ejs")%>
<%- include("./partials/sidebar.ejs")%>

<main class="main-wrap">
    <%- include("./partials/nav.ejs")%>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title fw-bolder text-primary">Ledger Book</h2>
                
            </div>
            <div>
                <input type="text" placeholder="Search by name" class="form-control bg-white" />
            </div>
        </div>
        <div class="card mb-4">
            
            <div class="card-body tab mt-5 ms-3">
                <div id="ledgerbookdiv" style="height:500px">
                    <!-- All Orders Content -->
                    
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        
                                        <th>#</th>
                                        <th>Date</th>
                                        <th>Description</th>
                                        <th>Type</th>
                                        <th>Amount</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                 <%ledgerData.forEach((i,index)=>{%>
                                    <tr>
                                        
                                        <td><%=index%></td>
                                        <td><%=i.createdAt.toISOString().split('T')[0]%></td>
                                        <td><b><%=i.description%></b></td>
                                        <td><%=i.type%></td>
                                        <td>
                                            <%=i.amount%>
                                        </td>
                                       
                                    </tr>
                                    <%})%>
                                </tbody>
                            </table>
                        </div>
                       
                    
                </div>
                <div class="d-flex justify-content-center">
                <div class="col-3 d-flex" id="paginationsection" data-total="<%=totalPages%>">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination" id="pagination"></ul>
                      </nav>
                </div>
            </div>
        </div>
        
    </section>
    <%- include("./partials/footer.ejs")%>
</main>

</body>
<script>
     const totalpages=document.getElementById('paginationsection').getAttribute('data-total');
    function generatePagination(numPages) {
    const paginationContainer = document.getElementById('pagination');
    paginationContainer.innerHTML = ''; // Clear existing pagination links

    // Add page number links
    for (let i = 1; i <= numPages; i++) {
      paginationContainer.innerHTML += `<li class="page-item d-flex" data-page="${i}"><a class="page-link" href="#" >${i}</a></li>`;
    }
  }
  
  generatePagination(totalpages);
  console.log(totalpages)
  const pagebtns=Array.from(document.getElementsByClassName('page-item'));
  console.log(pagebtns)
  let page;

  pagebtns.forEach(i=>{
    i.addEventListener('click',function(){
        page=this.getAttribute('data-page');
        window.location.href=`/admin/ledgerbook?page=${page}`;
           })
  })
</script>
</html>
